@using Pricetool.Models;
@using Pricetool.Services.CustomerServices;
@inject ICustomerService customerService;


<RadzenRow Gap="5rem" Style="padding-top:1rem">
    <RadzenColumn Size="6" Offset="1">
        <section class="">
            <RadzenText class="text-white d-flex align-items-center gap-3 justify-content-center" TextStyle="TextStyle.DisplayH6" style="color: white ; ">@customerService.SelectedCustomer.Name</RadzenText>


        </section>

        <section class="">
            <div class="container text-center text-md-start mt-4">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <div style="color: #A5ABD0; font-size: 12px;">CPR/CVR</div>
                        <div class="text-white" style="font-size: 16px;">@customerService.SelectedCustomer.Cvr</div>

                    </div>

                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <div style="color: #A5ABD0; font-size: 12px; ">Ansvarlig</div>
                        <div class="text-white" style="font-size: 16px;">@customerService.SelectedCustomer.Name</div>
                    </div>

                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <div style="color: #A5ABD0; font-size: 12px; ">Rating (apr. 2023)</div>
                        <div class="text-white" style="font-size: 16px;">@customerService.SelectedCustomer.Id</div>
                    </div>


                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <div style="color: #A5ABD0; font-size: 12px;">Segment</div>
                        <div class="text-primary" style="font-size: 16px; ">Storkunde</div>

                    </div>

                </div>

            </div>
        </section>
    </RadzenColumn>
</RadzenRow>
